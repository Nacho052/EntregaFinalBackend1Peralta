<h1 class="d-flex justify-content-center mb-5">PRODUCTOS</h1>
<div class="container">
    <div class="d-flex justify-content-evenly">
        {{#each products.payload}}
            <div class="card border-warning bg-secondary mb-5" style="width: 18rem;">
                <img src={{this.thumbnails}} class="card-img-top" alt="..."> 
                <div class="card-body mt-5">
                    <h5 class="card-title">{{this.title}}</h5>
                    <h6 class="card-text">{{this.description}}</h6>
                    <p>{{this._id}}</p>
                    <p>-Price: ${{this.price}}</p>
                    <p>-Code: {{this.code}}</p>
                    <p>-Stock: {{this.stock}}</p>
                    <p>-Category: {{this.category}}</p>
                </div>
            </div>
            <div class="d-grid gap-2 d-md-block">
                <button class="cart-button d-flex " onclick="addToCart('{{this._id}}')"> <i>Agregar al carrito</i> </button>
            </div>
            <hr>
        {{/each}}
</div>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        {{#if products.hasPrevPage}}
            <li class="page-item">
            <a class="page-link" href="?page={{products.prevPage}}&limit={{products.limit}}{{#if products.query}}&query={{products.query}}{{/if}}" aria-label="Previous">
                <span aria-hidden="true">Previous</span>
            </a>
            </li>
        {{else}}
            <li class="page-item disabled">
                <span class="page-link">Previous</span>
            </li>
        {{/if}}

        {{#each products.pages as |page|}}
        <li class="page-item {{#if (eq page products.page)}}active{{/if}}">
        {{#if (eq page products.page)}}
            <span class="page-link">{{page}}</span>
        {{else}}
            <a class="page-link" href="?page={{page}}&limit={{products.limit}}{{#if products.query}}&query={{products.query}}{{/if}}">{{page}}</a>
        {{/if}}
        </li>
        {{/each}}

        {{#if products.hasNextPage}}
            <li class="page-item">
                <a class="page-link" href="?page={{products.nextPage}}&limit={{products.limit}}{{#if products.query}}&query={{products.query}}{{/if}}" aria-label="Next">
                    <span aria-hidden="true">Next</span>
                </a>
            </li>
        {{else}}
            <li class="page-item disabled">
                <span class="page-link">Next</span>
            </li>
        {{/if}}
    </ul>
</nav>


<script src="js/main.js"></script>